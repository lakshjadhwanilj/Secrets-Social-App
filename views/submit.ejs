<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-5x"></i>
    <h1 class="display-4">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>
    <form action="/submit" method="POST">
      <div class="container text-center">
        <div class="d-inline-block mb-0 form-group w-75">
          <input type="text" class="form-control text-center border border-dark" name="secret" autocomplete="off"
            placeholder="What's your secret?">
        </div>
      </div>
      <hr class="border border-dark w-50">
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
