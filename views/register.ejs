<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8 mb-3">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <input type="email" class="form-control" name="username" placeholder="Email" autocomplete="off">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">

      <a class="btn btn-block btn-social btn-lg btn-google" href="/auth/google" role="button">
        <i class="fab fa-google"></i>
        Sign Up with Google
      </a>

      <a class="btn btn-block btn-social btn-lg btn-facebook" href="/auth/facebook" role="button">
        <i class="fab fa-facebook"></i>
        Sign Up with Facebook
      </a>

    </div>

  </div>
</div>

<%- include('partials/header') %>